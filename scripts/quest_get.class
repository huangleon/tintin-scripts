#class {quest_get} open;
#act {现在的任务是: 杀『%W』。}
{
	#undelay {killclass};
	#delay {killclass}
	{
		#unvar {item_index};
		#class {quest_get} kill;
		#showme quest_get finish;
	} {1};
};
